<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/requestor_name"
        android:text="Vivek Gupta"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        />
    <TextView
        android:id="@+id/requestor_blood_type"
        android:text="Blood Type: B+"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestor_name"
        android:layout_alignLeft="@+id/requestor_name"
        android:layout_alignStart="@+id/requestor_name"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/requestor_pints_needed"
        android:text="Amount:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestor_name"
        android:layout_toRightOf="@+id/requestor_blood_type"
        android:layout_toEndOf="@+id/requestor_blood_type"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:text="Reason: for blood request"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestor_msg"
        android:layout_below="@+id/requestor_blood_type"
        android:layout_alignLeft="@+id/requestor_blood_type"
        android:layout_alignStart="@+id/requestor_blood_type"
        android:layout_marginTop="8dp"/>
    <TextView
        android:text="Address:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestor_address"
        android:layout_below="@+id/requestor_msg"
        android:layout_alignLeft="@+id/requestor_msg"
        android:layout_alignStart="@+id/requestor_msg"
        android:layout_marginTop="8dp"/>
    <TextView
        android:text="Contact:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestor_contact"
        android:layout_below="@+id/requestor_address"
        android:layout_alignLeft="@+id/requestor_address"
        android:layout_alignStart="@+id/requestor_address"
        android:layout_marginTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/requestor_contact"
        android:layout_alignLeft="@+id/requestor_contact"
        android:layout_alignStart="@+id/requestor_contact"
        android:id="@+id/request_linear_layout"
        android:orientation="horizontal">
        <Button
            android:text="Call"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/accept_button" />
        <Button
            android:text="Close"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:id="@+id/reject_button" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/request_linear_layout"
        />

</RelativeLayout>