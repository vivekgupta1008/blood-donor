<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/donor_name"
        android:text="TextView"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        />

    <Button
        android:text="send SMS"
        android:background="@drawable/button_bg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/donor_name"
        android:layout_alignLeft="@+id/donor_name"
        android:layout_alignStart="@+id/donor_name"
        android:layout_marginTop="12dp"
        android:id="@+id/button_send_request"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/donor_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/donor_distance" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/button_send_request"
        />


</RelativeLayout>